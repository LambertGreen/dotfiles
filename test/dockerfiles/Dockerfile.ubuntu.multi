FROM base AS bootstrap-max

COPY --chown=user:user bootstrap/ /home/user/dev/my/dotfiles/bootstrap/
WORKDIR /home/user/dev/my/dotfiles/bootstrap

RUN echo "ğŸš€ Running max bootstrap..." && \
