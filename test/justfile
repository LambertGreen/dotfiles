    if [ ${PIPESTATUS[0]} -eq 0 ]; then \
        echo "âœ… mid-cli {{platform}} test PASSED"; \
    else \
        echo "âŒ mid-cli {{platform}} test FAILED"; \
        echo "ğŸ“„ Check test-mid-cli-{{platform}}-output.log for details"; \
    fi

# Tier 3: Development environment (multi-PM testing begins)
test-mid-dev platform=test_platform:
    @echo "ğŸ§ª Testing mid-dev tier on {{platform}}..."
    @echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
