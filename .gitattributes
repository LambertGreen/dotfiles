# Ensure all text files are treated as UTF-8
* text=auto

# POSIX shell scripts must use LF to avoid CRLF parsing issues on Cygwin/MSYS
*.sh text eol=lf
scripts/** text eol=lf

# Stow configuration files read by bash scripts must use LF
**/stow/stow.txt text eol=lf

 # Windows scripts keep CRLF endings
 *.ps1 text eol=crlf
 *.bat text eol=crlf
 *.cmd text eol=crlf
