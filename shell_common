#!/usr/bin/env bash

# Set uname
[[ -z "$UNAME" ]] || export UNAME=$(uname -s)

# Setup FZF to use fd
export FZF_DEFAULT_COMMAND='fd --type f --hidden --no-ignore-vcs'

# Perforce config
export P4CONFIG=.p4config

#----------
# Aliases
#----------
alias vim=nvim
alias vi=nvim
alias g=git
alias b=brew

#----------
# Functions
#----------
gw () {
    ./gradlew "$@"
}

StartSshAgent() {
    if [ "$UNAME" = "Darwin" ]; then
        # Keychain to start ssh-agent
        eval `keychain --eval id_rsa`
    else
        eval $(ssh-agent -s)
        ssh-add ~/.ssh/id_rsa
    fi
}

SetupDevEnvJava () {
    if [ -d "$HOME/.jenv/bin" ]; then
        export PATH="$HOME/.jenv/bin:$PATH"
        eval "$(jenv init -)"
    fi
}

SetupDevEnvNode () {
    export NVM_DIR="$HOME/.nvm"
    [ -s "/usr/local/opt/nvm/nvm.sh" ] && s "/usr/local/opt/nvm/nvm.sh"
    [ -s "/usr/local/opt/nvm/etc/bash_completion" ] && . "/usr/local/opt/nvm/etc/bash_completion"
}

SetupDevEnvRust () {
    export PATH="$PATH:$HOME/.cargo/bin"
}

SetupDevEnvRuby () {
    export PATH="$PATH:$HOME/.rvm/bin"
    # Source Ruby Version Manager
    [ -s "$HOME/.rvm/scripts/rvm" ] && . "$HOME/.rvm/scripts/rvm"
}

SetupDevEnvGo () {
    export GOPATH="${HOME}/.go"
    export GOROOT="$(brew --prefix golang)/libexec"
    export PATH="$PATH:${GOPATH}/bin:${GOROOT}/bin"
    test -d "${GOPATH}" || mkdir "${GOPATH}"
    test -d "${GOPATH}/src/github.com" || mkdir -p "${GOPATH}/src/github.com"
}

TimeShell() {
  for i in $(seq 1 10); do time $@ -i -c exit; done
}

ColorTest() {
    #   Copied from http://tldp.org/HOWTO/Bash-Prompt-HOWTO/x329.html
    T='gYw'   # The test text

    echo -e "\n                 40m     41m     42m     43m\
        44m     45m     46m     47m";

    for FGs in '    m' '   1m' '  30m' '1;30m' '  31m' '1;31m' '  32m' \
        '1;32m' '  33m' '1;33m' '  34m' '1;34m' '  35m' '1;35m' \
        '  36m' '1;36m' '  37m' '1;37m';
        do FG=${FGs// /}
            echo -en " $FGs \033[$FG  $T  "
            for BG in 40m 41m 42m 43m 44m 45m 46m 47m;
            do echo -en "$EINS \033[$FG\033[$BG  $T  \033[0m";
            done
            echo;
        done
        echo
}

# Source OS specific profile
if [ "$UNAME" = "Linux" ]; then
    [ -f "$HOME/.shell_linux" ] && . "$HOME/.shell_linux"
else
    true
fi

if [ "$UNAME" = "Darwin" ]; then
    [ -f "$HOME/.shell_osx" ] && . "$HOME/.shell_osx"
else
    true
fi
