#!/usr/bin/env just
# -*- mode: just -*-

# Common development tools update recipes
# Shared across all platforms - import this into platform-specific update justfiles

# ðŸ”„ Update Python development packages
update-python-dev:
    @echo "Updating Python development tools virtual environment..."
    @if [ ! -d ~/.local/share/python-dev-tools-venv ]; then \
        echo "âŒ Python dev tools venv not found. Run 'just install-python-dev' first."; \
        exit 1; \
    fi
    @if [ ! -f ~/.local/share/python-dev-tools-venv/requirements.txt ]; then \
        echo "âŒ Requirements file not found. Reinstall with 'just install-python-dev'."; \
        exit 1; \
    fi
    @cd ~/.local/share/python-dev-tools-venv && \
        ./bin/pip install --upgrade pip && \
        ./bin/pip install --upgrade -r requirements.txt
    @echo "âœ… Python dev tools updated"

# ðŸ”„ Update Node.js development packages
update-node-dev:
    @echo "Updating Node.js development tools..."
    @if [ ! -d ~/.local/share/nodejs-dev-tools ]; then \
        echo "âŒ Node.js dev tools directory not found. Run 'just install-node-dev' first."; \
        exit 1; \
    fi
    cd ~/.local/share/nodejs-dev-tools && npm update
    @echo "âœ… Node.js dev tools updated"

# ðŸ”„ Update Rust development packages  
update-rust-dev:
    @echo "Updating Rust development tools..."
    @echo "Note: Rust toolchain updates handled by system package manager"
    @if [ ! -f ~/.local/share/rust-dev-tools/cargo-tools.txt ]; then \
        echo "âŒ Cargo tools list not found. Reinstall with 'just install-rust-dev'."; \
        exit 1; \
    fi
    @echo "Updating cargo tools..."
    @while read -r tool; do \
        if command -v "$$tool" >/dev/null 2>&1; then \
            echo "Updating $$tool..."; \
            cargo install "$$tool"; \
        fi; \
    done < ~/.local/share/rust-dev-tools/cargo-tools.txt
    @echo "âœ… Rust dev tools updated"

# ðŸ”„ Update all development tools
update-dev-tools: update-python-dev update-node-dev update-rust-dev
    @echo "âœ… All development tools updated!"
    @echo ""
    @echo "ðŸ” Run 'just verify-dev-tools' to verify installations"