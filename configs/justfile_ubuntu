#!/usr/bin/env just
# -*- mode: just -*-

# Ubuntu Linux dotfiles stowing by level
# Levels: basic (shell), typical (terminal apps), max (GUI apps)

import 'justfile_common'

# =============================================================================
# UBUNTU-SPECIFIC PACKAGE LISTS
# =============================================================================

# Basic Ubuntu packages
ubuntu_basic_packages := "package_management_ubuntu package_management_posix git_linux shell_linux"

# Typical Ubuntu packages
ubuntu_typical_packages := "gnupg_linux"

# Max Ubuntu packages
ubuntu_max_packages := "xdg-autostart xdg-desktop"

_default:
    @just -f justfile_ubuntu --list

# =============================================================================
# BASIC LEVEL - Shell environment essentials
# =============================================================================

# üî∞ Stow basic Ubuntu configs (shell environment essentials)
stow-basic:
    @echo "üîó Stowing basic Ubuntu configs (shell environment)..."
    just -f justfile_common _remove-conflicting-shell-configs
    just -f justfile_common _stow-basic-common
    stow {{ubuntu_basic_packages}}

# =============================================================================
# TYPICAL LEVEL - Basic + terminal applications
# =============================================================================

# üî∂ Stow typical Ubuntu configs (basic + terminal applications)
stow-typical: stow-basic
    @echo "üîó Stowing typical Ubuntu configs (+ terminal apps)..."
    just -f justfile_common _stow-typical-common
    stow {{ubuntu_typical_packages}}

# =============================================================================
# MAX LEVEL - Typical + GUI applications
# =============================================================================

# üî∏ Stow max Ubuntu configs (typical + GUI applications)
stow-max: stow-typical
    @echo "üîó Stowing max Ubuntu configs (+ GUI apps)..."
    just -f justfile_common _stow-max-common
    stow {{ubuntu_max_packages}}

# =============================================================================
# MANAGEMENT COMMANDS
# =============================================================================

# üì¶ Show what packages are included at each level
list-packages:
    @echo "üì¶ Ubuntu Linux Package Organization:"
    @echo ""
    just -f justfile_common _list-common-packages
    @echo ""
    @echo "üè† UBUNTU-SPECIFIC ADDITIONS:"
    @echo "  Basic: {{ubuntu_basic_packages}}"
    @echo "  Typical: {{ubuntu_typical_packages}}"
    @echo "  Max: {{ubuntu_max_packages}}"
