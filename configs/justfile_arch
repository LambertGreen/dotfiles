#!/usr/bin/env just
# -*- mode: just -*-

# Arch Linux dotfiles stowing by level
# Levels: basic (shell), typical (terminal apps), max (GUI apps)

import 'justfile_common'

# =============================================================================
# ARCH-SPECIFIC PACKAGE LISTS
# =============================================================================

# Basic Arch packages
arch_basic_packages := "package_management_arch package_management_posix git_linux shell_linux"

# Typical Arch packages
arch_typical_packages := "gnupg_linux"

# Max Arch packages (none currently - inherits from common)
arch_max_packages := ""

default:
    @echo "üèõÔ∏è Arch Linux Stowing Recipes"
    @echo ""
    @echo "Levels:"
    @echo "  just stow-basic    - Shell environment essentials"
    @echo "  just stow-typical  - Basic + terminal applications" 
    @echo "  just stow-max      - Typical + GUI applications"
    @echo ""
    @echo "Management:"
    @echo "  just unstow-all    - Remove all stowed configs"
    @echo "  just list-packages - Show what gets stowed at each level"

# =============================================================================
# BASIC LEVEL - Shell environment essentials
# =============================================================================
stow-basic:
    @echo "üîó Stowing basic Arch configs (shell environment)..."
    just -f justfile_common _remove-conflicting-shell-configs
    just -f justfile_common _stow-basic-common
    stow {{arch_basic_packages}}

# =============================================================================
# TYPICAL LEVEL - Basic + terminal applications  
# =============================================================================
stow-typical: stow-basic
    @echo "üîó Stowing typical Arch configs (+ terminal apps)..."
    just -f justfile_common _stow-typical-common
    stow {{arch_typical_packages}}

# =============================================================================
# MAX LEVEL - Typical + GUI applications
# =============================================================================
stow-max: stow-typical
    @echo "üîó Stowing max Arch configs (+ GUI apps)..."
    just -f justfile_common _stow-max-common

# =============================================================================
# MANAGEMENT COMMANDS
# =============================================================================

# Remove all stowed configs
unstow-all:
    @echo "üóëÔ∏è Unstowing all Arch configs..."
    @_unstow-arch-all

_unstow-arch-all:
    # Use common unstow functions
    just -f justfile_common _unstow-max-common
    just -f justfile_common _unstow-typical-common
    just -f justfile_common _unstow-basic-common
    # Arch-specific packages
    - stow -D {{arch_basic_packages}}
    - stow -D {{arch_typical_packages}}

# Show what packages are included at each level
list-packages:
    @echo "üì¶ Arch Linux Package Organization:"
    @echo ""
    just -f justfile_common _list-common-packages
    @echo ""
    @echo "üè† ARCH-SPECIFIC ADDITIONS:"
    @echo "  Basic: {{arch_basic_packages}}"
    @echo "  Typical: {{arch_typical_packages}}"
    @echo "  Max: {{arch_max_packages}}"