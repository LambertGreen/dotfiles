#!/usr/bin/env just --justfile
# Package Manager Hub
# Quick access to individual package manager commands

set shell := ["bash", "-uc"]

# Default: show available package managers
default:
    @echo "ğŸ“¦ Package Manager Hub"
    @echo ""
    @echo "ğŸ¯ Quick Access to Package Managers:"
    @echo "  just brew              # Enter Homebrew (macOS/Linux)"
    @echo "  just npm               # Enter NPM (Node.js)"  
    @echo "  just pip               # Enter Pip (Python)"
    @echo "  just apt               # Enter APT (Ubuntu/Debian)"
    @echo "  just pacman            # Enter Pacman (Arch Linux)"
    @echo "  just scoop             # Enter Scoop (Windows)"
    @echo "  just choco             # Enter Chocolatey (Windows)"
    @echo "  just cargo             # Enter Cargo (Rust)"
    @echo "  just gem               # Enter RubyGems (Ruby)"
    @echo ""
    @echo "ğŸ’¡ Each command opens a focused shell for that package manager"
    @echo "   Type 'just' in each shell to see available commands"
    @echo "   Type 'exit' to return to this hub"

# Enter Homebrew shell
brew:
    @echo "ğŸº Entering Homebrew package manager..."
    @echo "Type 'just' to see commands, 'exit' to return"
    @echo ""
    @cd brew && exec $SHELL

# Enter NPM shell  
npm:
    @echo "ğŸ“¦ Entering NPM package manager..."
    @echo "Type 'just' to see commands, 'exit' to return"
    @echo ""
    @cd npm && exec $SHELL

# Enter Pip shell
pip:
    @echo "ğŸ Entering Pip package manager..."
    @echo "Type 'just' to see commands, 'exit' to return"
    @echo ""
    @cd pip && exec $SHELL

# Enter APT shell
apt:
    @echo "ğŸ“¦ Entering APT package manager..."
    @echo "Type 'just' to see commands, 'exit' to return"
    @echo ""
    @cd apt && exec $SHELL

# Enter Pacman shell
pacman:
    @echo "ğŸ“¦ Entering Pacman package manager..."
    @echo "Type 'just' to see commands, 'exit' to return"
    @echo ""
    @cd pacman && exec $SHELL

# Enter Scoop shell
scoop:
    @echo "ğŸª£ Entering Scoop package manager..."
    @echo "Type 'just' to see commands, 'exit' to return"
    @echo ""
    @cd scoop && exec $SHELL

# Enter Chocolatey shell
choco:
    @echo "ğŸ« Entering Chocolatey package manager..."
    @echo "Type 'just' to see commands, 'exit' to return"
    @echo ""
    @cd choco && exec $SHELL

# Enter Cargo shell
cargo:
    @echo "ğŸ¦€ Entering Cargo package manager..."
    @echo "Type 'just' to see commands, 'exit' to return"
    @echo ""
    @cd cargo && exec $SHELL

# Enter RubyGems shell
gem:
    @echo "ğŸ’ Entering RubyGems package manager..."
    @echo "Type 'just' to see commands, 'exit' to return"
    @echo ""
    @cd gem && exec $SHELL

# Direct command execution (bypass modal interface)
brew-install package:
    @cd brew && just install-package {{package}}

npm-install package:
    @cd npm && just install-package {{package}}

pip-install package:
    @cd pip && just install-package {{package}}

# Quick status across all available package managers
status:
    @echo "ğŸ“Š Package Manager Status"
    @echo ""
    @if command -v brew >/dev/null 2>&1; then echo "ğŸº Homebrew: âœ… Available"; else echo "ğŸº Homebrew: âŒ Not installed"; fi
    @if command -v npm >/dev/null 2>&1; then echo "ğŸ“¦ NPM: âœ… Available"; else echo "ğŸ“¦ NPM: âŒ Not installed"; fi
    @if command -v pip3 >/dev/null 2>&1; then echo "ğŸ Pip: âœ… Available"; else echo "ğŸ Pip: âŒ Not installed"; fi
    @if command -v apt >/dev/null 2>&1; then echo "ğŸ“¦ APT: âœ… Available"; else echo "ğŸ“¦ APT: âŒ Not available"; fi
    @if command -v pacman >/dev/null 2>&1; then echo "ğŸ“¦ Pacman: âœ… Available"; else echo "ğŸ“¦ Pacman: âŒ Not available"; fi