#!/usr/bin/env just --justfile
# Cargo Package Manager Commands (Rust)
# Documentation and execution for Rust package operations

set shell := ["bash", "-uc"]

# Default: show available commands
default:
    @echo "ğŸ¦€ Cargo Package Manager (Rust)"
    @echo ""
    @echo "ğŸ“¦ Basic Operations:"
    @echo "  just install           # Install packages from current machine class"
    @echo "  just check             # Check for outdated packages"
    @echo "  just upgrade           # Upgrade all packages"
    @echo "  just clean             # Clean cargo cache"
    @echo ""
    @echo "ğŸ“‹ Information:"
    @echo "  just list              # List installed packages"
    @echo "  just search <package>  # Search for packages"
    @echo "  just info <package>    # Get package information"
    @echo ""
    @echo "ğŸ”§ Advanced:"
    @echo "  just export            # Export current packages"
    @echo "  just audit             # Run security audit"
    @echo ""
    @echo "ğŸ’¡ Cargo Tips:"
    @echo "  - Installs binaries to ~/.cargo/bin"
    @echo "  - Use 'cargo install-update -a' to update all"
    @echo "  - Requires cargo-update crate for upgrades"

# Install packages from current machine class
install:
    @if [[ -f ~/.dotfiles.env ]]; then \
        source ~/.dotfiles.env; \
        packages_file="$(pwd)/../../machines/$DOTFILES_MACHINE_CLASS/cargo/packages.txt"; \
        if [[ -f "$packages_file" ]]; then \
            echo "ğŸ¦€ Installing packages from: $packages_file"; \
            while IFS= read -r package; do \
                if [[ -n "$package" && ! "$package" =~ ^#.* ]]; then \
                    echo "Installing: $package"; \
                    cargo install "$package"; \
                fi; \
            done < "$packages_file"; \
        else \
            echo "âŒ No packages.txt found for machine class: $DOTFILES_MACHINE_CLASS"; \
        fi; \
    else \
        echo "âŒ Configuration not found. Run: just configure"; \
    fi

# Check for outdated packages
check:
    @echo "ğŸ” Checking for outdated Rust packages..."
    @if command -v cargo-outdated >/dev/null 2>&1; then \
        cargo outdated; \
    else \
        echo "ğŸ’¡ Install cargo-outdated for this feature: cargo install cargo-outdated"; \
    fi

# Upgrade all packages
upgrade:
    @echo "ğŸ”„ Upgrading all Rust packages..."
    @if command -v cargo-install-update >/dev/null 2>&1; then \
        cargo install-update -a; \
    else \
        echo "ğŸ’¡ Install cargo-update for this feature: cargo install cargo-update"; \
    fi

# Clean cargo cache
clean:
    @echo "ğŸ§¹ Cleaning cargo cache..."
    @cargo clean
    @echo "âœ… Cache cleaned"

# List installed packages
list:
    @echo "ğŸ¦€ Installed Rust packages:"
    @cargo install --list | grep -E "^[a-zA-Z]" | sed 's/ v.*://' || echo "No packages installed"

# Search for packages
search package:
    @echo "ğŸ” Searching for: {{package}}"
    @echo "ğŸŒ Visit: https://crates.io/search?q={{package}}"
    @echo "ğŸ’¡ Use 'cargo search {{package}}' for CLI search"

# Get package information
info package:
    @echo "â„¹ï¸  Information for: {{package}}"
    @cargo search {{package}} | head -5

# Export current packages
export:
    @echo "ğŸ“¦ Exporting current Rust packages..."
    @cargo install --list | grep -E "^[a-zA-Z]" | sed 's/ v.*//' > cargo-packages.txt
    @echo "âœ… Exported to ./cargo-packages.txt"
    @echo ""
    @echo "ğŸ’¡ To install from this list:"
    @echo "  cat cargo-packages.txt | xargs -I {} cargo install {}"

# Run security audit
audit:
    @echo "ğŸ” Running security audit..."
    @if command -v cargo-audit >/dev/null 2>&1; then \
        cargo audit; \
    else \
        echo "ğŸ’¡ Install cargo-audit for this feature: cargo install cargo-audit"; \
    fi

# Common package operations
install-package package:
    @echo "ğŸ¦€ Installing: {{package}}"
    @cargo install {{package}}

remove-package package:
    @echo "ğŸ—‘ï¸  Removing: {{package}}"
    @cargo uninstall {{package}}

# Update cargo itself
update-cargo:
    @echo "ğŸ”„ Updating cargo..."
    @rustup update

# Show cargo configuration
config:
    @echo "âš™ï¸  Cargo configuration:"
    @echo "Cargo home: ${CARGO_HOME:-~/.cargo}"
    @echo "Rust toolchain: $(rustc --version)"
    @echo "Cargo version: $(cargo --version)"