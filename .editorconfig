# EditorConfig for consistent coding styles
# https://editorconfig.org/

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
end_of_line = lf
indent_size = 4

# Python
[*.py]
indent_size = 4

# Markdown and Org files
[*.{md,org}]
trim_trailing_whitespace = true
# Keep trailing spaces for markdown line breaks

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Makefiles require tabs
[{Makefile,justfile}]
indent_style = tab
indent_size = 4

# Docker files
[{Dockerfile*,*.dockerfile}]
indent_size = 4
